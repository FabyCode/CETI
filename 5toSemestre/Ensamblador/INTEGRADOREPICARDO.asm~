	ORG 0000H
	LJMP INICIALIZACION
	ORG 0003H
	LJMP INTtres
	ORG 0013H
	LJMP INTuno
INICIALIZACION:
	MOV IE,#85H
	MOV IP,#4H
	RS EQU P3.0
	E EQU P3.1
	R8 EQU 80H
	CLR E
	CLR RS
	MOV P1, #00111000B
	LCALL RETARD
	MOV P1, #00111000B
	LCALL RETARD
	MOV P1, #00111000B
	LCALL RETARD
	MOV P1, #00001111B
	LCALL RETARD
	MOV P1, #00000001B
	LCALL RETARD
	MOV P1, #00000110B
	LCALL RETARD
	SETB RS
NAME:	CLR RS
	MOV P1,#01H
	LCALL RETARD
	SETB RS
	MOV DPTR, #REG
AQUI: 	MOV A, #00H
	MOVC A,@A+DPTR
	MOV P1,A
	INC DPTR
	LCALL RETARD1Seg
	CJNE A,#00H,AQUI
	CLR RS
	LCALL RETARD1Seg
	LJMP NAME
INTtres:
	CLR RS
	MOV P1,#01H
	LCALL RETARD
	SETB RS
	MOV DPTR, #APEpa
PINdoce:
	MOV A, #00H
	MOVC A,@A+DPTR
	MOV P1,A
	INC DPTR
	LCALL RETARD
	CJNE A,#00H, PINdoce
	CLR RS
	LCALL RETARD1Seg
	RETI
INTuno:	CLR RS
	MOV P1,#01H
	LCALL RETARD
	SETB RS
	MOV DPTR, #APEma
PINtrece:
	MOV A, #00H
	MOVC A,@A+DPTR
	MOV P1,A
	INC DPTR
	LCALL RETARD
	CJNE A,#00H, PINtrece
	CLR RS
	LCALL RETARD1Seg
	RETI
REG:	DB '21100283.'
APEpa:	DB 'Rodriguez.'
APEma:	DB 'Gomez.'
RETARD:
	SETB E
	MOV R2, #0FAH
BUCLE:	MOV R3, #0FAH
BUCLE2:	DJNZ R3,BUCLE2
	DJNZ R2, BUCLE
	CLR E
	MOV R2,#0FAH
	MOV R3,#0FAH
	RET
RETARD1Seg:
	SETB E
	MOV R1,#08H
PACA:	MOV R2, #0FAH
ACA:	MOV R3, #0FAH
ACATLAN:
	DJNZ R3,ACATLAN
	DJNZ R2, ACA
	DJNZ R1,PACA
	MOV R1,#08H
	MOV R2,#0FAH
	MOV R3,#0FAH
	CLR E
	RET
	END